@model ABPosSolutions.TechnicalTest.Web.Models.CreateBuildingDto
@{
    ViewData["Title"] = "Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form asp-action="Detail" asp-controller="Building">
    <div asp-validation-summary=ModelOnly></div>
    @if (Model.Id != null)
    {
        <input type="hidden" asp-for="Id"/>
    }
  <div class="form-group">
    <label asp-for="BuildingName"></label>
    <input asp-for="BuildingName" class="form-control" >
    <span asp-validation-for="BuildingName" class="text-danger small"></span>
  </div>
  <div class="form-group">
    <label asp-for="Address"></label>
    <input asp-for="Address" class="form-control" >
    <span asp-validation-for="Address" class="text-danger small"></span>
  </div>
  <button type="submit" class="btn btn-primary">Save</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
